    <div class="container">
    <form action="leap_year.html"></form>
    <h1>Enter the year to check that it is a leap year or not</h1>
    
        <input value="" id="myText" type="number">
    
    <button onclick="done()" id="submit" type="submit">submit</button>

    <br><br>
    <h1 id="output">
    </h1>
</div>


    <script>
        function done() {
            let x = document.getElementById("myText").value;
            document.getElementById("output").innerHTML = x;
      var year = x;
debugger;
if(year % 4 === 0){
  if(year % 100 === 0){
    if(year % 400 === 0){
      document.getElementById("output").innerHTML = "The year " + year + " is a leap year";
    }else{
       document.getElementById("output").innerHTML = "The year " + year + " is not a leap year";
    }
  }else{
     document.getElementById("output").innerHTML = "The year " + year + " is a leap year";
  }
}else{
   document.getElementById("output").innerHTML = "The year " + year + " is not a leap year";
}
        }
    </script>
